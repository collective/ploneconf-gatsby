{
  "extends": ["stylelint-config-recommended", "stylelint-config-prettier"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "each",
          "extend",
          "include",
          "function",
          "mixin",
          "return"
        ]
      }
    ]
  }
}
